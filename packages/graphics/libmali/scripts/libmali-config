GPUINFO=/sys/kernel/debug/mali/version
[ ! -f "$GPUINFO" ] && GPUINFO=$(find /sys/devices/platform -name gpuinfo)
echo "GPUINFO: $GPUINFO"

[ ! -f "$GPUINFO" ] && exit

GPU=$(cat $GPUINFO)
echo "GPU: $GPU"

case $GPU in
  Mali-400*)
    LIB="libmali-utgard-400-*.so"
    ;;
  Mali-450*)
    LIB="libmali-utgard-450-*.so"
    ;;
  Mali-T62x*)
    LIB="libmali-midgard-t620-*.so"
    ;;
  Mali-T72x*)
    LIB="libmali-midgard-t720-*.so"
    ;;
  Mali-T76x*r0p0*)
    LIB="libmali-midgard-t76x-*-r0p0-*.so"
    ;;
  Mali-T76x*r1p0*)
    LIB="libmali-midgard-t76x-*-r1p0-*.so"
    ;;
  Mali-T86x*)
    LIB="libmali-midgard-t86x-*.so"
    ;;
  Mali-G31*)
    LIB="libmali-bifrost-g31-*.so"
    ;;
  Mali-G52*)
    LIB="libmali-bifrost-g52-*.so"
    ;;
esac

echo "LIB: $LIB"

[ -z "$LIB" ] && exit

LIBMALI=$(find /usr/lib -name $LIB)
echo "LIBMALI: $LIBMALI"

if [ -f "$LIBMALI" ]; then
  mkdir -p /var/lib/libmali
    ln -sf $LIBMALI /var/lib/libmali/libmali.so
fi
