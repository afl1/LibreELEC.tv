  # Kernel to use
    LINUX="amlogic-g12"

  # OpenGL-ES implementation to use
    OPENGLES="libmali"

  # KODI Player implementation to use
    KODIPLAYER_DRIVER="$OPENGLES"

  # additional drivers to install
    ADDITIONAL_DRIVERS="mali-bifrost RTL8812AU"

  # Mali GPU family
    MALI_FAMILY="g52"

  # Configuration for u-boot
    UBOOT_VERSION="vendor"
    DTB=meson-g12b-odroid-n2.dtb

  # Additional kernel make parameters
    KERNEL_MAKE_EXTRACMD="dtbs"

  # additional packages to install
    ADDITIONAL_PACKAGES+=" aml_autoscript amlogic-boot-fip"
