# fix addon services installation
mkdir -p /storage/.config/system.d/kodi.target.wants
for service_dir in /storage/.kodi/addons/service.* ; do
 cd $service_dir/system.d
 for service in *.service ; do
  echo Fixing: $service
  ln -fs $service_dir/system.d/$service /storage/.config/system.d/$service
  ln -fs $service_dir/system.d/$service /storage/.config/system.d/kodi.target.wants/$service
 done
done
systemctl daemon-reload
cd /storage

